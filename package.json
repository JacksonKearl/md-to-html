{
	"name": "md-to-html",
	"displayName": "Markdown to Statically-Linked HTML",
	"description": "Convert md to single html file with data-uri embedded references",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:md-to-html.convertToHTML"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "md-to-html.convertToHTML",
				"title": "Convert document to HTML File",
				"when": "editorLangId == markdown"
			}
		],
		"keybindings": [
			{
				"command": "md-to-html.convertToHTML",
				"key": "alt+c",
				"when": "editorLangId == markdown"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "md-to-html.convertToHTML",
					"when": "editorLangId == markdown"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/marked": "^2.0.0",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"datauri": "^3.0.0",
		"marked": "^2.0.1"
	}
}
